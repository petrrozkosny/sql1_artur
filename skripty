WITH tbl1 AS(
SELECT  YEAR(datum) rok, AVG(srazky) prumerne_srazky
FROM data_nova
GROUP BY YEAR(datum)),

tbl2 AS(
SELECT  YEAR(datum) rok, AVG(srazky) prumerne_srazky
FROM data_nova
WHERE lokalita = 'RUZYNE'
GROUP BY YEAR(datum))
SELECT tbl1.*,tbl2.prumerne_srazky prumerne_srazky_ruzyne
FROM tbl1
LEFT JOIN tbl2 ON tbl1.rok = tbl2.rok
